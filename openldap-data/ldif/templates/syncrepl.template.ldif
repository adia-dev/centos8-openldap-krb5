dn: olcDatabase={2}mdb,cn=config
changetype: modify
add: olcSyncRepl
olcSyncRepl: rid={{SLAPD_REPLICATION_ID}}
    provider={{SLAPD_REPLICATION_PROVIDER_HOST}}
    bindmethod=simple
    binddn="{{SLAPD_REPLICATION_BIND_DN}}"
    credentials={{SLAPD_REPLICATION_CREDENTIALS}}
    searchbase="{{SLAPD_REPLICATION_SEARCH_BASE}}"
    scope=sub
    schemachecking=on
    type=refreshAndPersist
    retry="30 5 300 3"
    interval=00:00:05:00
